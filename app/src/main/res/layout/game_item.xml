<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="property"
            type="com.sloman.rs.skocko.Guess" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/twHits"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="@{property.hits.toString}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/twGuess"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/twGuess"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="@{property.guesses.toString()}"
            app:layout_constraintEnd_toStartOf="@+id/twHits"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

