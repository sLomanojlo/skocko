<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.sloman.rs.skocko.GameViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameActivity">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rwGuesses"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/rwSymbols"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:listData="@{viewModel.game}" />


        <Button
            android:id="@+id/btnGuess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guess!"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnPlayAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play Again"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintBottom_toTopOf="@+id/btnGuess"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/twState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/btnPlayAgain"
            app:layout_constraintStart_toStartOf="@+id/rwGuesses"
            app:status="@{viewModel.game.game.state}" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rwSymbols"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/btnPlayAgain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:symbolData="@{viewModel.symbolList}" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rwGuessTry"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            app:guessData="@{viewModel.guessList}"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnPlayAgain"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>